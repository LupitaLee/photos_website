<form class="form-container" action="/signup" method="POST">
  <div class="container">
    <h1>Sign Up</h1>
    <p>Please fill in this form to create an account.</p>
    <hr>
    <div class="mb-3">
	<label for="username"><b>Username</b></label>
    <input type="text" class="form-control" placeholder="Enter Username" name="username" required>
    </div>

    <div class="mb-3">
    <label for="email"><b>Email</b></label>
    <input type="text" class="form-control" placeholder="Enter Email" name="email" required>
    </div>

    <div class="mb-3">
    <label for="password"><b>Password</b></label>
    <input type="password" class="form-control"  placeholder="Enter Password" name="password" required>
    </div>


    <div class="mb-3">
    <label for="passwordt"><b>Repeat Password</b></label>
    <input type="password" class="form-control" placeholder="Repeat Password" name="password" required><br>
     </div>
    
    <div class="clearfix"><br>
    
      <button type="submit" class="btn btn-primary" class="signupbtn">Sign Up</button>
    </div>
  </div>
</form>

